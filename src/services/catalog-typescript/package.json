{
  "name": "catalog-service",
  "version": "0.0.1",
  "author": "Thinh Nguyen, Thang Chung",
  "license": "MIT",
  "description": "This is a catalog-service for coolstore project.",
  "scripts": {
    "start": "npm run sysinfo && npm run build && node ./dist/server.js",
    "dev": "npm run build && nodemon",
    "build": "npm run clean && npm run swagger-gen && npm run routes-gen && tsc",
    "clean": "rimraf dist",
    "swagger-gen": "cross-env-shell \"tsoa swagger --basePath $BASE_PATH\"",
    "routes-gen": "cross-env-shell \"tsoa routes --basePath $BASE_PATH\"",
    "tsoa": "tsoa",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "sysinfo": "echo \"os: `uname -s`\nnode: `node --version`\nnpm: `npm --version`\nyarn: `yarn --version`\""
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "method-override": "^3.0.0",
    "mongoose": "^5.2.8",
    "swagger-ui-express": "^3.0.10",
    "tsoa": "^2.1.8",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.0",
    "@types/method-override": "^0.0.31",
    "@types/mongoose": "^5.2.5",
    "@types/node": "^9.4.6",
    "@types/uuid": "^3.4.3",
    "ncp": "^2.0.0",
    "nodemon": "^1.18.3",
    "tslint": "^3.11.0",
    "typescript": "^3.0.1",
    "cross-env": "^5.2.0",
    "rimraf": "^2.5.2"
  },
  "repository": {
    "type": "git"
  }
}
